<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.assignment_2.controllers.GamePortController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="The Game Port System"/>
    <Button fx:id="display" onAction="#display" text="List: "/>
    <TextField fx:id="addPortedGame" promptText="add Ported Game "/>
    <TextField fx:id="addGamesMachinePortedTo" promptText="add Games Machine Being Ported To" />
    <TextField fx:id="addPortDeveloper" promptText="add Port Developer" />
    <TextField fx:id="addLaunchYear" promptText="add Launch Year" />
    <TextField fx:id="addCoverArt" promptText="add Cover Art URL" />
    <Button onAction="#addGamePorts" text="Add" />
    <Button onAction="#clearGamePorts" text="Clear" />

    <TextField fx:id="removeName" promptText="name of Game Port to Remove" />
    <Button onAction="#removeGamePort" text="Remove" />
    <TextField fx:id="editName" promptText="name of Port to Edit" />
    <Button onAction="#editGamePort" text="Edit" />

    <Button onAction="#switchSceneGamePortToGame" text="Access Games" />

</VBox>
